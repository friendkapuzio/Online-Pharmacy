<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>
    Online Pharmacy
  </display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <taglib>
      <taglib-uri>customtags</taglib-uri>
      <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
    </taglib>
  </jsp-config>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>by.bsu.machulski.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LocaleFilter</filter-name>
    <filter-class>by.bsu.machulski.filter.LocaleFilter</filter-class>
    <init-param>
      <param-name>defaultLocale</param-name>
      <param-value>en-US</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CommandFilter</filter-name>
    <filter-class>by.bsu.machulski.filter.CommandFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CommandFilter</filter-name>
    <url-pattern>/controller</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/jsp/error/error404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/jsp/error/error.jsp</location>
  </error-page>
</web-app>